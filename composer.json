{
  "name": "openeuropa/code-review",
  "description": "OpenEuropa code review component.",
  "license": "EUPL-1.2",
  "require": {
    "php": ">=7.2",
    "cweagans/composer-patches": "^1.0",
    "drupal/coder": "8.3.9",
    "phpmd/phpmd" : "^2.6",
    "phpro/grumphp": "0.15.2",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5|^6.0"
  },
  "_readme": [
    "We explicitly require phpro/grumphp 0.15.2 or else the patch supplied for grumphp might not apply anymore."
  ],
  "autoload": {
    "psr-4": {
      "OpenEuropa\\CodeReview\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpenEuropa\\CodeReview\\Tests\\": "./tests/"
    }
  },
  "extra": {
    "enable-patching": true,
    "composer-exit-on-patch-failure": true,
    "patches": {
      "phpro/grumphp": {
        "Fix extensions missing argument. Ref. https://github.com/phpro/grumphp/pull/743": "https://gist.githubusercontent.com/nagyad/155b4456bfb53213f6f04f0320122228/raw/2e645ae520fe8f70511856ab781256e8db28050c/grumphp_fix_extensions_arg.patch"
      }
    }
  },
  "scripts": {
    "changelog": "docker run --rm -v \"$(pwd):$(pwd)\" -w $(pwd) muccg/github-changelog-generator openeuropa/code-review -t $CHANGELOG_GITHUB_TOKEN --future-release=$CHANGELOG_FUTURE_RELEASE --release-branch=1.x"
  }
}
